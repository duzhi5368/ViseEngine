    <DataTemplate x:Key="ResourceInfoDataTemplate_Wrap" DataType="local:ResourceInfo">
        <Border x:Name="Bd" SnapsToDevicePixels="true" CornerRadius="2" BorderThickness="1" >
            <Border.ToolTip>
                <ToolTip Style="{StaticResource ResourceToolTipStyle}"/>
            </Border.ToolTip>
            <Border x:Name="PART_Border_SVN" BorderBrush="{StaticResource SVNUnknowBrush}" BorderThickness="1" CornerRadius="4" Background="{x:Null}">
                <Grid Margin="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Margin="1,5,0,3" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <!--Rectangle Fill="{Binding ResourceTypeBrush}" Grid.ColumnSpan="2" RadiusX="2" RadiusY="2" /-->
                        <!--Image Height="16" Margin="2" Source="{Binding ResourceIcon}"/-->
                        <Grid Grid.ColumnSpan="2" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.8*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Fill="{Binding ResourceTypeBrush}" Margin="0,0,-2,0" />
                            <Path Data="M1.6666667,1 L86.833,1 21.824264,7.0833333 87.1665,13.500519 1.833,13.500519 z" Fill="{Binding ResourceTypeBrush}" Margin="0" Stretch="Fill" Grid.ColumnSpan="1" Grid.Column="1" />
                        </Grid>
                        <TextBlock Text="{Binding ResourceTypeName}" Grid.ColumnSpan="1" Grid.Column="1" Margin="5,3,0,3" VerticalAlignment="Center" Style="{DynamicResource {ComponentResourceKey ResourceId=TextBlockStyle_Default, TypeInTargetAssembly={x:Type res:CustomResources}}}" TextOptions.TextFormattingMode="Display" SnapsToDevicePixels="True" TextOptions.TextHintingMode="Fixed" UseLayoutRounding="True" FontWeight="Bold" />
                        <Image Grid.Column="1" ToolTip="需要保存" Visibility="{Binding UnsaveVisibility}" Source="/ResourceLibrary;component/Icon/File/dirty.png" HorizontalAlignment="Right" VerticalAlignment="Center" Width="Auto" Height="23" Margin="0,0,2,0" />
                    </Grid>
                    <Grid Margin="3" Grid.Row="1">
                        <Image x:Name="SourceSnapshot"  SnapsToDevicePixels="True" Margin="1" Source="{Binding Snapshot, UpdateSourceTrigger=PropertyChanged}"/>
                        <Image x:Name="Image_SourceNotUse" Margin="0" Source="/ResourcesBrowser;component/Icon/unuse.png" Visibility="Collapsed"/>
                        <local:WaitingProgress Margin="10" Visibility="{Binding WaitingProcessVisibility}" />
                    </Grid>
                    <Grid x:Name="PART_Infos" Grid.Row="2" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Name}" ToolTip="{Binding Name}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,8" TextTrimming="CharacterEllipsis"/>
                    </Grid>
                    <Image x:Name="PART_SvnLock" Margin="5,5,0,0" Source="/ResourcesBrowser;component/Icon/svnlock.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="32" Height="32" Visibility="{Binding SVNLockVisibility}" Grid.Row="1"/>
                    <!--Grid x:Name="UnsaveTip" ToolTip="需要保存" Height="20" Width="21" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,-9.5,-12.5,0" Visibility="{Binding UnsaveVisibility}" Grid.RowSpan="3">
