<Window x:Class="WorldViewer.ActorLayerEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="场景层管理器" Height="381" Width="211.5" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF595959">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="Auto"/>
    		<RowDefinition Height="0.927*"/>
    	</Grid.RowDefinitions>
    	<ListBox x:Name="ListBox_Layers" Margin="2" Grid.Row="1" Background="{x:Null}"/>
        
    	<Button HorizontalAlignment="Left" Margin="3,2,2,2" Width="24" Height="24" ToolTip="添加层" Click="Button_Add_Click">
            <Image Source="/ResourceLibrary;component/Icon/File/new.png"  />
		</Button>
    	<Button HorizontalAlignment="Right" Margin="2,2,3,2" Width="24" Height="24" ToolTip="删除层" Click="Button_Del_Click">
            <Image Source="/ResourceLibrary;component/Icon/File/delete.png"  />
    	</Button>
        
    </Grid>
</Window>
